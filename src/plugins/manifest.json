{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "search-filtering",
  "description": "简单的Chrome扩展demo",
  "action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "24": "assets/icon24.png",
      "32": "assets/icon32.png"
    },
    "default_title": "Click Me",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "js": [
        "js/popup.js"
      ],
      "css": [],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}